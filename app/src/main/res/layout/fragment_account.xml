<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:background="#f6f5f3">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            app:layout_collapseMode="pin"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/MenuStyle">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="190dp"
                    android:layout_marginLeft="0dp"
                    android:text="@string/app_profile"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/list_item_friend"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="163dp"
            android:elevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/recommend"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:drawableLeft="@drawable/music_note_outline"
                        android:drawablePadding="16dp"
                        android:layout_marginLeft="0dp"
                        android:tint="#000000"
                        android:gravity="left|center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:height="60dp"
                        android:padding="12dp"
                        android:text="Рекомендации"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="212dp"
            android:elevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:drawableLeft="@drawable/magnify"
                        android:drawablePadding="16dp"
                        android:layout_marginLeft="0dp"
                        android:tint="#000000"
                        android:gravity="left|center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:height="60dp"
                        android:padding="12dp"
                        android:text="Поиск по музыке"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="262dp"
            android:elevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/artist"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:drawableLeft="@drawable/artist"
                        android:drawablePadding="16dp"
                        android:layout_marginLeft="0dp"
                        android:tint="#000000"
                        android:gravity="left|center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:height="60dp"
                        android:padding="12dp"
                        android:text="Исполнители"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="409dp"
            android:elevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/like"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:drawableLeft="@drawable/heart_outline"
                        android:drawablePadding="16dp"
                        android:layout_marginLeft="0dp"
                        android:tint="#000000"
                        android:gravity="left|center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:height="60dp"
                        android:padding="12dp"
                        android:text="Понравилось"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="311dp"
            android:elevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/exit_text"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:drawableLeft="@drawable/arrow_collapse_down"
                        android:drawablePadding="16dp"
                        android:layout_marginLeft="0dp"
                        android:tint="#000000"
                        android:gravity="left|center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:height="60dp"
                        android:padding="12dp"
                        android:text="@string/app_save"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:elevation="2dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/local_text"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:drawableLeft="@drawable/folder"
                        android:drawablePadding="16dp"
                        android:layout_marginLeft="0dp"
                        android:tint="#000000"
                        android:gravity="left|center"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:height="60dp"
                        android:padding="12dp"
                        android:text="@string/app_loca"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
